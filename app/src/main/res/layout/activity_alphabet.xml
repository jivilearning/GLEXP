<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".alphabetActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_a_btn"
        android:background="@drawable/a"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_e_btn"
        android:background="@drawable/e"
        android:layout_below="@+id/letter_a_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_b_btn"
        android:background="@drawable/b"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/letter_a_btn"
        android:layout_toEndOf="@+id/letter_a_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_c_btn"
        android:background="@drawable/c"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/letter_b_btn"
        android:layout_toEndOf="@+id/letter_b_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_f_btn"
        android:background="@drawable/f"
        android:layout_alignBaseline="@+id/letter_e_btn"
        android:layout_alignBottom="@+id/letter_e_btn"
        android:layout_toRightOf="@+id/letter_e_btn"
        android:layout_toEndOf="@+id/letter_e_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_g_btn"
        android:background="@drawable/g"
        android:layout_alignBaseline="@+id/letter_f_btn"
        android:layout_alignBottom="@+id/letter_f_btn"
        android:layout_toRightOf="@+id/letter_b_btn"
        android:layout_toEndOf="@+id/letter_b_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_i_btn"
        android:background="@drawable/i"
        android:layout_below="@+id/letter_e_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_j_btn"
        android:background="@drawable/j"
        android:layout_alignBaseline="@+id/letter_i_btn"
        android:layout_alignBottom="@+id/letter_i_btn"
        android:layout_toRightOf="@+id/letter_e_btn"
        android:layout_toEndOf="@+id/letter_e_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_k_btn"
        android:background="@drawable/k"
        android:layout_alignBaseline="@+id/letter_j_btn"
        android:layout_alignBottom="@+id/letter_j_btn"
        android:layout_toRightOf="@+id/letter_f_btn"
        android:layout_toEndOf="@+id/letter_f_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_m_btn"
        android:background="@drawable/m"
        android:layout_below="@+id/letter_i_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_n_btn"
        android:background="@drawable/n"
        android:layout_below="@+id/letter_j_btn"
        android:layout_toRightOf="@+id/letter_i_btn"
        android:layout_toEndOf="@+id/letter_i_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_o_btn"
        android:background="@drawable/o"
        android:layout_alignBaseline="@+id/letter_n_btn"
        android:layout_alignBottom="@+id/letter_n_btn"
        android:layout_toRightOf="@+id/letter_j_btn"
        android:layout_toEndOf="@+id/letter_j_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_q_btn"
        android:background="@drawable/q"
        android:layout_below="@+id/letter_m_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_r_btn"
        android:background="@drawable/r"
        android:layout_alignBaseline="@+id/letter_q_btn"
        android:layout_alignBottom="@+id/letter_q_btn"
        android:layout_toRightOf="@+id/letter_m_btn"
        android:layout_toEndOf="@+id/letter_m_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_s_btn"
        android:background="@drawable/s"
        android:layout_below="@+id/letter_o_btn"
        android:layout_toRightOf="@+id/letter_n_btn"
        android:layout_toEndOf="@+id/letter_n_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_u_btn"
        android:background="@drawable/u"
        android:layout_below="@+id/letter_q_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_v_btn"
        android:background="@drawable/v"
        android:layout_alignBaseline="@+id/letter_u_btn"
        android:layout_alignBottom="@+id/letter_u_btn"
        android:layout_toRightOf="@+id/letter_u_btn"
        android:layout_toEndOf="@+id/letter_u_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_w_btn"
        android:background="@drawable/w"
        android:layout_below="@+id/letter_s_btn"
        android:layout_toRightOf="@+id/letter_r_btn"
        android:layout_toEndOf="@+id/letter_r_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_y_btn"
        android:background="@drawable/y"
        android:layout_below="@+id/letter_u_btn"
        android:layout_toRightOf="@+id/letter_u_btn"
        android:layout_toEndOf="@+id/letter_u_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_z_btn"
        android:background="@drawable/z"
        android:layout_below="@+id/letter_w_btn"
        android:layout_toRightOf="@+id/letter_v_btn"
        android:layout_toEndOf="@+id/letter_v_btn"
        android:onClick="letter_pressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_d_btn"
        android:background="@drawable/d"
        android:onClick="letter_pressed"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/letter_c_btn"
        android:layout_toEndOf="@+id/letter_c_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_p_btn"
        android:background="@drawable/p"
        android:onClick="letter_pressed"
        android:layout_alignBaseline="@+id/letter_o_btn"
        android:layout_alignBottom="@+id/letter_o_btn"
        android:layout_toRightOf="@+id/letter_k_btn"
        android:layout_toEndOf="@+id/letter_k_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_x_btn"
        android:background="@drawable/x"
        android:onClick="letter_pressed"
        android:layout_alignBaseline="@+id/letter_w_btn"
        android:layout_alignBottom="@+id/letter_w_btn"
        android:layout_toRightOf="@+id/letter_w_btn"
        android:layout_toEndOf="@+id/letter_w_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_h_btn"
        android:background="@drawable/h"
        android:onClick="letter_pressed"
        android:layout_below="@+id/letter_d_btn"
        android:layout_toRightOf="@+id/letter_c_btn"
        android:layout_toEndOf="@+id/letter_c_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_l_btn"
        android:background="@drawable/l"
        android:onClick="letter_pressed"
        android:layout_below="@+id/letter_h_btn"
        android:layout_toRightOf="@+id/letter_k_btn"
        android:layout_toEndOf="@+id/letter_k_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letter_t_btn"
        android:background="@drawable/t"
        android:onClick="letter_pressed"
        android:layout_alignBaseline="@+id/letter_s_btn"
        android:layout_alignBottom="@+id/letter_s_btn"
        android:layout_toRightOf="@+id/letter_o_btn"
        android:layout_toEndOf="@+id/letter_o_btn" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:onClick="backToMain"
        android:id="@+id/button_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
